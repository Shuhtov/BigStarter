@{
    ViewData["Title"] = "Home Page";
}


<div class="row justify-content-center">
    <div class="col-12">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/images/1.png" alt="First slide" style="height: 300px">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Какая то мотивирующая надпись</h5>
                        <p>Текст</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/3.png" alt="Second slide" style="height: 300px">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Какая то мотивирующая надпись</h5>
                        <p>Текст</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/4.png" alt="Third slide" style="height: 300px">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Какая то мотивирующая надпись</h5>
                        <p>Текст</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<br/>
<div class="container-fluid justifu-content-center">
    <div class="row justify-content-center">
        <div class="col-9">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active badge-light" id="popular-tab" data-toggle="tab" href="#popular" role="tab" aria-controls="popular" aria-selected="true">Most popular</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link badge-light" id="updated-tab" data-toggle="tab" href="#updated" role="tab" aria-controls="updated" aria-selected="false">Updated projects</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link badge-light" id="highest-tab" data-toggle="tab" href="#highest" role="tab" aria-controls="highest" aria-selected="false">Highest rating</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link badge-light" id="almost-tab" data-toggle="tab" href="#almost" role="tab" aria-controls="almost" aria-selected="false">Almost funded</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="popular" role="tabpanel" aria-labelledby="popular-tab">
                    <partial name="_ProjectCardPartial" />
                </div>
                <div class="tab-pane fade" id="updated" role="tabpanel" aria-labelledby="updated-tab">
                    <partial name="_ProjectCardPartial" />
                </div>
                <div class="tab-pane fade" id="highest" role="tabpanel" aria-labelledby="highest-tab">
                    <partial name="_ProjectCardPartial" />
                </div>
                <div class="tab-pane fade" id="almost" role="tabpanel" aria-labelledby="almost-tab">
                    <partial name="_ProjectCardPartial" />
                </div>
            </div>
        </div>
    </div>
</div>


