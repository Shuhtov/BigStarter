<div class="container" style="max-width: 800px">
    <form class="border border-light p-5">

        <p class="h4 mb-4 text-center">Sign in</p>

        <input type="email" id="defaultLoginFormEmail" class="form-control mb-4" placeholder="E-mail">

        <input type="password" id="defaultLoginFormPassword" class="form-control mb-4" placeholder="Password">

        <div class="d-flex justify-content-between">
            <div>
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
                    <label class="custom-control-label" for="defaultLoginFormRemember">Remember me</label>
                </div>
            </div>
            @*<div>
                <a href="">Forgot password?</a>
            </div>*@
        </div>

        <button class="btn btn-info btn-block my-4" type="submit">Sign in</button>

        <div class="text-center">
            <p>
                Not a member?
                <a asp-controller="AccountManagement" asp-action="Register">Register</a>
            </p>

            <p>or sign in with:</p>


            <a asp-action="SignInSocial" asp-route-provider="Twitter" class="btn btn-social btn-twitter btn-lg">
                <span class="fa fa-twitter"></span>
            </a>
            <a asp-action="SignInSocial" asp-route-provider="Facebook" class="btn btn-social btn-facebook btn-lg">
                <span class="fa fa-facebook"></span>
            </a>
            <a asp-action="SignInSocial" asp-route-provider="Google" class="btn btn-social btn-google btn-lg">
                <span class="fa fa-google"></span>
            </a>


        </div>
    </form>
</div>






